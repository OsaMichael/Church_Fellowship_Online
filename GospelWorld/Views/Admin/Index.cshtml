    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-app-primary">
                        <div class="inner">
                            <h3>@ViewBag.DepartmentCount</h3>

                            <p>Total Number Departments</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>

                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-app-primary">
                        <div class="inner">
                            <h3>@ViewBag.SermonCount<sup style="font-size: 20px"></sup></h3>

                            <p>Total Sermon</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-spoon"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-app-primary">
                        <div class="inner">
                            <h3>@ViewBag.MemberCount</h3>

                            <p>Members</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a data-target="#loginModal" data-toggle="modal" class="small-box-footer">Add New Admin <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-app-primary">
                        <div class="inner">
                            <h3>@ViewBag.EventCount</h3>

                            <p>Events</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">

                    <div class="small-box bg-app-primary">
                        <div class="inner">
                            <h3>@ViewBag.WorkerCount</h3>

                            <p>Workers</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <!-- Main row -->
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<div class="col-xs-12">
    <div id="loginModal" class="modal fade" tabindex="-1" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title">Add New Login Details</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" placeholder="Username..." id="username" name="username" />
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" placeholder="Password..." id="password" name="password" />
                        </div>

                        <div class="form-group">
                            <label for="ConfirmPassword">Confirm Password</label>
                            <input type="password" class="form-control" placeholder="Confirm Password..." id="ConfirmPassword" name="ConfirmPassword" />
                        </div>


                        <div class="form-group">
                            <label for="role">Role</label>
                            <select class="form-control" id="role" name="RoleName">
                                @*@foreach (var role in Model.RoleName)
                                    {
                                        <option value="@role.Id">@role.Name</option>
                                    }*@
                            </select>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <img src="~/Content/img/ajax-loader.gif" id="loader" style="display:none" />
                    <button class="btn btn-success" id="AddLogin">Add</button>
                    <button class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
