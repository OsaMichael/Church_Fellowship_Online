@using GospelWorld.Models;
@model GospelWorld.Models.EventTypeListViewModel
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Title = "Index";
    var sn = 1;
}

<h2>Categories</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="fa fa-list"></span>  @Html.ActionLink("Add Event Type", "AddEventType", null, new { @class = "btn btn-success btn-sm pull-right linker" })
    </div>
    <div class="panel-body">
        <table class="table table-striped rbody">
            <tr>
                <th>S/N</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>



            @foreach (var category in Model.EventTypes)
            {
                <tr>
                    <td>@sn</td>

                    <td style="width: 300px;">@category.Name</td>
                    <td style="width: 200px;">@category.Description</td>
                    <td><a href="/Admin/EditEventType/@category.ETId" class="linker">Edit</a></td>
                    <td>
                        @using (Html.BeginForm("DeleteEventType", "Admin"))
                        {
                            @Html.Hidden("Id", category.ETId)
                            <input type="submit" class="btn btn-danger btn-xs" value="Delete" />
                        }

                    </td>
                </tr>


                sn++;
            }
        </table>
    </div>
    <div class="panel-footer">

    </div>

</div>
