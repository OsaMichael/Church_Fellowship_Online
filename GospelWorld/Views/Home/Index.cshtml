<section class="church-activities-area section-padding-100-0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center mx-auto">
                    @*<img src="~/Content/img/bg-img/bg-5.jpg" alt="">*@
                    <h3>Church Activities</h3>
                    <p>Worship with us at RCCG Praise Assembly</p>
                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-12 col-lg-6">

                <div class="upcoming-events mb-100">

                    <div class="headline">
                        <h5>Upcoming Events</h5>
                    </div>
                    @foreach (var item in Model.Events)
                    {
                        if (item.EventDate >= DateTime.Now)
                        {

                            <div class="single-upcoming-events d-flex align-items-center">

                                <div class="event-date-thumbnail d-flex align-items-center">
                                    <div class="event-date">
                                        <h6>@item.EventDate.Day <br> @item.EventDate.Month <br> @item.EventDate.Year</h6>
                                    </div>
                                    <div class="event-thumbnail bg-img">
                                        <img src="@Url.Content("~/Content/images/")@item.EventImageThumbnailUrl" height="40" />
                                    </div>
                                </div>

                                <div class="events-content">
                                    <a href="@Url.Action("EventDetails", "Event", new { id = item.EventId })">
                                        <h6>@item.EventName</h6>
                                    </a>
                                    <p>@item.EventDate  @item.EventLocation</p>
                                </div>
                            </div>
                        }
                    }
                    <div class="all-events-btn">
                        <a href="@Url.Action("UpcomingEvents","Event")" class="btn faith-btn active">See All Events</a>
                    </div>

                </div>
            </div>
            <div class="col-12 col-lg-6">

                <div class="latest-sermons mb-100">
                    <div class="headline">
                        <h5>Latest Sermons</h5>
                    </div>


                    @foreach (var item in Model.Sermons)
                    {
                        if (item.SermonDate <= DateTime.Now)
                        {

                            <div class="single-sermons">
                                <div class="sermons-content d-flex align-items-center">

                                    <div class="sermons-thumbnail bg-img">
                                        <img src="@Url.Content("~/Content/images/")@item.ImageThumbnailUrl" alt="preacher :@item.PreacherName" />


                                    </div>

                                    <div class="sermons-text">
                                        <a href="@Url.Action("SermonDetails","Sermon", new { id = item.SermId } )">

                                            <h6>@item.SermonTitle</h6>
                                        </a>
                                        <p>by @item.PreacherName</p>
                                        <p class="date"> @item.SermonDate.Date</p>

                                    </div>
                                </div>
                                <div class="sermons-audio-player d-flex align-items-center">
                                    <audio preload="auto" controls>
                                        <source src="~/Content/audio/dummy-audio.mp3">
                                    </audio>
                                    <div class="see-more-btn">
                                        <a href="@Url.Action("SermonDetails","Sermon", new { id = item.SermId } )">See More</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    <div class="all-events-btn">
                        <a href="@Url.Action("Index","Sermon")" class="btn faith-btn active">See All Sermon</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


