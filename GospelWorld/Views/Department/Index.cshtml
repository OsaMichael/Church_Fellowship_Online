@model IEnumerable<GospelWorld.Models.DepartmentModel>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcumb-area bg-img" style="background-image: url(~/Content/img/bg-img/bg-4.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12 col-md-6">
                <div class="breadcumb-text">
                    <h5>Join one today</h5>
                    <h2>Ministries</h2>
                    <p>
                        Jesus Christ told us, his disciples, to make disciples of all nations. In line with our ultimate goal to make heaven and to take as many people with us as is possible,
                        the most important values of this church is our mission to the world
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ministries-area section-padding-100-0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading text-center mx-auto">
                    <img src="~/Content/img/core-img/cross.png" alt="">
                    <h3>Ministries/Department</h3>
                    <p>You can be part of the following ministries/departments by joining..</p>
                </div>
            </div>
        </div>

        <div class="row">



            @foreach (var item in ViewBag.Profile)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="single-ministry mb-100">
                        <img src="@Url.Content("~/Content/Images/")@item.ImageThumbnailUrl" alt="@item.DeptLeaderName">

                        <div class="ministry-content">
                            <h6>@item.DeptName</h6>
                            <span>@item.DeptName </span>
                            <p>@Html.Raw(item.Description)</p>
                            <div class="ministry-btn">
                                @*<a href="@Url.Action("JoinWorker","Worker", new { id = item.Id } )" class="btn faith-btn">Join</a>*@

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

